<div class="container p-4">
  <div class="row justify-content-center">
    <h1>Agregar estudiante</h1>
  </div>
  
  <div class="row justify-content-center mt-4">
    <div class="col-md-4">
      <form action="/estudiantes/agregar" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="nombre" placeholder="Nombre del estudiante" required autofocus />
        </div>
        
        <div class="form-group">
          <input type="text" class="form-control" name="apellido" placeholder="Apellido del estudiante" required />
        </div>
        
        <div class="form-group">
          <input type="email" class="form-control" name="email" placeholder="Correo del estudiante" required />
        </div>
        
        <div class="form-group">
          <select class="form-control" name="idcarrera" required>
            <option value="">Seleccione una opci√≥n</option>
            <option value="I01">I01</option>
            <option value="I02">I02</option>
            <option value="I03">I03</option>
            <option value="I04">I04</option>
          </select>
        </div>
        
        <div class="form-group">
          <input type="text" class="form-control" name="usuario" placeholder="Usuario del estudiante" required />
        </div>
        
        <div class="form-group">
          <button type="submit" class="btn btn-success btn-block">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>
