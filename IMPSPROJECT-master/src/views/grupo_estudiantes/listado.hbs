<div class="container p-4">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-6">
        <h3>Listado de Grupos de Estudiantes</h3>
      </div>
      <div class="col-sm-6">
        <a href="/grupo_estudiantes/agregar" class="btn btn-success d-block text-white">
          Agregar Grupo de Estudiante
        </a>
      </div>
    </div>
  </div>

  <div class="col-sm-12 mt-4">
    <table class="table table-bordered table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">ID Grupo Estudiante</th>
          <th scope="col">ID Grupo</th>
          <th scope="col">ID Estudiante</th>
          <th scope="col">Opciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each grupoEstudiantes}}
        <tr>
          <th scope="row">{{idgrupoestudiante}}</th>
          <td>{{idgrupo}}</td>
          <td>{{idestudiante}}</td>
          <td>
            <a href="/grupo_estudiantes/editar/{{idgrupoestudiante}}" class="btn btn-primary text-white">Modificar</a>
            <a href="/grupo_estudiantes/eliminar/{{idgrupoestudiante}}" class="btn btn-danger text-white">Eliminar</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
