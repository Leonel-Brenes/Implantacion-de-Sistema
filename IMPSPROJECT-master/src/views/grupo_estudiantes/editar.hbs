<div class="container p-4">
  <div class="row justify-content-center">
    <h1>Editar Grupo de Estudiante</h1>
  </div>
  
  <div class="row justify-content-center mt-4">
    <div class="col-md-4">
      <form action="/grupo_estudiantes/editar/{{idgrupoestudiante}}" method="POST">
        
        <div class="form-group">
          <label for="idgrupo">ID Grupo</label>
          <input type="number" class="form-control" name="idgrupo" value="{{idgrupo}}" placeholder="ID del Grupo" required />
        </div>
        
        <div class="form-group">
          <label for="idestudiante">ID Estudiante</label>
          <input type="text" class="form-control" name="idestudiante" value="{{idestudiante}}" placeholder="ID del Estudiante" required />
        </div>
        
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
        </div>
      </form>
    </div>
  </div>
</div>
