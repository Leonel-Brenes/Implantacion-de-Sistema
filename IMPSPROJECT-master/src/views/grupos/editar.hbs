<div class="container p-4">
  <div class="row justify-content-center">
    <h1>Editar Grupo</h1>
  </div>
  
  <div class="row justify-content-center mt-4">
    <div class="col-md-4">
      <form action="/grupos/editar/{{idgrupo}}" method="POST">
        
        <div class="form-group">
          <label for="num_grupo">Número de Grupo</label>
          <input type="text" class="form-control" name="num_grupo" value="{{num_grupo}}" placeholder="Número de Grupo" required />
        </div>
        
        <div class="form-group">
          <label for="anio">Año</label>
          <input type="number" class="form-control" name="anio" value="{{anio}}" placeholder="Año" required />
        </div>
        
        <div class="form-group">
          <label for="ciclo">Ciclo</label>
          <input type="text" class="form-control" name="ciclo" value="{{ciclo}}" placeholder="Ciclo" required />
        </div>
        
        <div class="form-group">
          <label for="idmateria">ID Materia</label>
          <input type="number" class="form-control" name="idmateria" value="{{idmateria}}" placeholder="ID Materia" required />
        </div>
        
        <div class="form-group">
          <label for="idprofesor">ID Profesor</label>
          <input type="number" class="form-control" name="idprofesor" value="{{idprofesor}}" placeholder="ID Profesor" required />
        </div>
        
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
        </div>
      </form>
    </div>
  </div>
</div>
