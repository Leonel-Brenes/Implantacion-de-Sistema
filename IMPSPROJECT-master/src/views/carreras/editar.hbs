<div class="container p-4">
  <div class="row justify-content-center">
    <h1>Editar Carrera</h1>
  </div>
  
  <div class="row justify-content-center mt-4">
    <div class="col-md-4">
      <form action="/carreras/editar/{{idcarrera}}" method="POST">
        <div class="form-group">
          <label for="idcarrera">ID Carrera</label>
          <input type="text" class="form-control" name="idcarrera" value="{{idcarrera}}" readonly />
        </div>
        
        <div class="form-group">
          <label for="carrera">Nombre de la Carrera</label>
          <input type="text" class="form-control" name="carrera" value="{{carrera}}" placeholder="Nombre de la carrera" required />
        </div>
        
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
        </div>
      </form>
    </div>
  </div>
</div>
